<%= form_with model: @character do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @character.errors.full_messages_for(:name).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
